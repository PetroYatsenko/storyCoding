mixin dashb_subj_label(subj, subname)
  case subj
    when 'tutorial'
      span.label.label-info #{subname}
    when 'tests'
      span.label.label-warning #{subname}
    default
      span.label.label-success #{subname}
      
mixin dashb_next_label(next, state, passed)
  if passed > 0 && next
    | &nbsp;
    span.label.label-info= state.next
  else if next
    | &nbsp;
    span.label.label-info= state.start

mixin dashb_count_badge(subj, trials)
  case subj
    when 'tests'
    when 'tutorial'
      | &nbsp;
    default
      span.badge #{trials}
      
mixin dashb_read_label(state)
  | &nbsp;
  span.label.label-info= state.read_story