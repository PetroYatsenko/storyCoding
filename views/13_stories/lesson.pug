extends ../layout

block scripts
  script.
    var steps = !{steps}
    var nextPath = !{next}
  script(src='/js/narrator.js')
  
block content
  h2= title 
    | &nbsp;
    span.label.label-info= subject
  .container-fluid
    .col-sm-4.text-center
      h3= img1
      img#pompon_color(src="/images/pompons/hat/pompon_darkblue.png")
      h3= img2
      img#monster_img(src="/images/pompons/monster/monster_cover.png")
    .col-sm-8
      .raw.text-center
        .col-sm-3
          h3= h1
          button.btn.btn-success.btn-lg(type='button' id='boy_button') #{h1_act}
        .col-sm-3
          h3= h2
          button.btn.btn-success.btn-lg(type='button' id='mom_button') #{h2_act}
        .col-sm-3
          h3= h3
          button.btn.btn-success.btn-lg(type='button' id='monster_button') #{h3_act}
        .col-sm-3  
          h3= h4
          button.btn.btn-info.btn-lg(type='button' id='go') #{h4_act}
      .raw
        .col-sm-12
          hr
          each val, index in story_items
            p.story_text(id='story_item_' + index) !{val}
          hr      