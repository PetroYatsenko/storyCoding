extends ../layout

block scripts
  script.
    var nextPath = !{next_path}  
  script(src='/js/explanation.js')   

block content
  h2= title
    | &nbsp;
    span.label.label-info= subject
  .container-fluid
    .raw
      .col-sm-4
        img#img1(src= img)
      .col-sm-8
        h3= you_can
        button.btn.btn-info.btn-lg(type='button' id='go') !{your_talent}
        hr
        each val, index in expl_items
          p.story_text.visible !{val}
        hr