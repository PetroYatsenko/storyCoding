extends ../layout

block scripts
  script.
    var steps = !{steps}
    var nextPath = !{explanation}
  script(src='/js/narrator.js')
  
block content
  h2= title 
    | &nbsp;
    span.label.label-info= subject
  .container-fluid
    .col-sm-4.text-center
      h3= boy_hat
      img#pompon_color(src="/images/pompons/hat/pompon_darkblue.png")
      h3= greetings
      img#monster_img(src="/images/pompons/monster/monster_cover.png")
    .col-sm-8
      .raw.text-center
        .col-sm-3
          h3= boy_talent
          button.btn.btn-success.btn-lg(type='button' id='boy_button') #{boy_action}
        .col-sm-3
          h3= mom_talent
          button.btn.btn-success.btn-lg(type='button' id='mom_button') #{mom_action}
        .col-sm-3
          h3= monster_talent
          button.btn.btn-success.btn-lg(type='button' id='monster_button') #{monster_action}
        .col-sm-3  
          h3= your_talent
          button.btn.btn-info.btn-lg(type='button' id='go') #{your_action}
      .raw
        .col-sm-12
          hr
          each val, index in story_items
            p.story_text(id='story_item_' + index) !{val}
          hr      