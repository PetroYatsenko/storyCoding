extends ../layout
  
block scripts
  script.
    var nextPath = !{next_path}
    var savePath = !{save_path}
    var watermark = !{watermark}
    var author = !{author}
    var storyTitle = !{JSON.stringify(story_title)}
    var storyHero = !{story_hero}
    var storyName = !{story_name}
    var imgPath = !{JSON.stringify(img_path)}
  script(src='/js/lib/pdfmake/pdfmake.min.js')  
  script(src='/js/lib/pdfmake/vfs_fonts.js')
  script(src='/js/arrange.js')
  
block content  
  .container
    .col-sm-3.text-center
      img#img1(src= img_path)
    .col-sm-9
      .raw.text-center
        .col-sm-12         
          h2.text-center= story_title            
          .btn-group
            button.btn.btn-success.btn-sm(type='button' id='pdf' title= str.pdf) 
              i.fa.fa-file-pdf-o
            button.btn.btn-success.btn-sm(type='button' id='print' title= str.print) 
              i.fa.fa-print
            button.btn.btn-success.btn-sm(type='button' id='dload' title= str.dload) 
              i.fa.fa-download
          | &nbsp;    
          .btn-group
            button.btn.btn-info.btn-sm(type='button' id='edit' title= str.edit)
              i.fa.fa-pencil-square-o
            button.btn.btn-primary.btn-sm(type='button' id='record' title= str.complete)
              i.fa.fa-floppy-o
      .raw
        .col-sm-12
          hr
          #story
          hr  
      