extends ../layout
  
block scripts
  script.
    var nextPath = !{next_path}
    var savePath = !{save_path}
    var watermark = !{watermark}
    var credentials = !{credentials}
  script(src='/js/lib/pdfmake/pdfmake.min.js')  
  script(src='/js/lib/pdfmake/vfs_fonts.js')
  script(src='/js/arrange.js')
  
block content
  h2= title
    | &nbsp;
    span.label.label-info= subject  
  .container
    .col-sm-3.text-center
      .thumbnail
        img#img1
        p 
          h3= story_title
    .col-sm-9
      .raw.text-center
        .col-sm-12
          h3= you_can
          .btn-group
            button.btn.btn-success.btn-lg(type='button' id='pdf' title= pdf) 
              i.fa.fa-file-pdf-o
            button.btn.btn-success.btn-lg(type='button' id='print' title= print) 
              i.fa.fa-print
            button.btn.btn-success.btn-lg(type='button' id='dload' title= dload) 
              i.fa.fa-download
          | &nbsp;    
          .btn-group
            button.btn.btn-info.btn-lg(type='button' id='edit' title= edit)
              i.fa.fa-pencil-square-o
            button.btn.btn-primary.btn-lg(type='button' id='record' title= complete)
              i.fa.fa-floppy-o
      .raw
        .col-sm-12
          hr
          #story
          hr  
      