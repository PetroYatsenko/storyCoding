extends ../layout

block scripts
  script.
    var webStorageAlert= !{noStorage}
    var nextStep = !{nextStep}  
  script(src='/js/select_heroes.js')

block content
  h1= description
  .text-center#zoo
    each val in zoo
      .col-sm-4
        .thumbnail
          if (val.enabled)
            img.pointer.w3-opacity.w3-hover-opacity-off(
              src= '/images/practice/monsters_small/' + val.monster 
              +'.png' id= val.monster alt= val[state].name)
            p 
              strong= val[state].name
            p= val[state].talent
          else
            img.w3-opacity(
              src= '/images/practice/monsters_small/' + val.monster 
              +'.png' alt= val[state].name)
            p 
              strong= val[state].name
            p              
              a(href='/#prices' target='_blank') 
                strong= msg