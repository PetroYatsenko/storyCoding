extends ../layout

block scripts
  script.
    var webStorageAlert= !{noStorage}
    var nextStep = !{nextStep}  
  script(src='/js/select_heroes.js')

block content
  h1= description
  .text-center#zoo
    each variable in zoo
      .col-sm-4
        .thumbnail            
          if (variable.enabled)
            img.pointer.w3-opacity.w3-hover-opacity-off(
              src= '/images/practice/monsters_small/' + variable.monster 
              +'.png' id= variable.monster alt= variable.monster)
            p 
              strong= variable.name
            p= variable.talent
          else
            img.w3-opacity(
              src= '/images/practice/monsters_small/' + variable.monster 
              +'.png' alt= variable.monster)
            p 
              strong= variable.name
            p= msg