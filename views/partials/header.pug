.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')        
        span.label.label-danger= siteLogo
        if user
          +account_label(user.classes[course_id].account, global_str)  
      a.navbar-brand(href='https://www.fb.me/greatProseStudy' target="_blank" rel="noopener noreferrer")  
        span.label.label-info
          i.fa.fa-facebook.fa-left-margin 
    .collapse.navbar-collapse
      if (main_page)
        ul.nav.navbar-nav          
          li
            a(href='#services') Курс 
          li
            a(href='#how_it_works') Методи
          li
            a(href='#team') Команда
          li
            a(href='#prices') Ціни
          li
            a(href='#faq') Питання  
          li
            a(href='#contact') Контакти          
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title === 'Вхід') ? 'active' : undefined)
            a(href='/login') Вхід
          li(class=(title === 'Реєстрація') ? 'active' : undefined)
            a(href='/signup') Реєстрація
        else
          li.dropdown(class=(title === 'Мій профіль') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src= user.profile.picture)
              else
                img(src= user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu              
              li
                a(href='/lessons/dashboard') Усі історії
              li.divider  
              li
                a(href='/account') Мій профіль
              li.divider
              li
                a(href='/logout') Вийти
