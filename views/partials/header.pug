.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')        
        span.label.label-danger= siteLogo
        small
          if user
            | &nbsp;
            +account_label(user.classes[course_id].account, global_str)
          if process.env.ENVIRONMENT === 'development'
            | &nbsp;
            +account_label(process.env.ENVIRONMENT, global_str)
    .collapse.navbar-collapse
      if (title === 'Home')
        ul.nav.navbar-nav          
          li
            a(href='#services') Про нас 
          li
            a(href='#monsters') Монстри
          li
            a(href='#prices') Ціни
          li
            a(href='#faq') FAQ  
          li
            a(href='#contact') Контакти          
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title === 'Login') ? 'active' : undefined)
            a(href='/login') Login
          li(class=(title === 'Create Account') ? 'active' : undefined)
            a(href='/signup') Create Account
        else
          li.dropdown(class=(title === 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              if user.profile.picture
                img(src= user.profile.picture)
              else
                img(src= user.gravatar(60))
              span= user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu              
              li
                a(href='/lessons/dashboard') Усі історії
              li.divider  
              li
                a(href='/account') Мій профіль
              li.divider
              li
                a(href='/logout') Вийти
